<div class='btn-toolbar sequence-editor-toolbar'>
  
  <% if( showAddStep ) { %> 
    <button class='add-step-button toolbar-button btn btn-sm btn-default' href='#' >Add Step</button>
  <% } %> 

  <div class="status-message"><%= statusMessage %></div> 

  <div class="actions">
    <% if( showPublishButton ) { %> 
      <button class='toolbar-button btn btn-sm btn-default publish-button <%= published ? 'hidden' : '' %>' href='#' ><i class="fa fa-star" aria-hidden="true"></i> Accept</button>
      <button class='toolbar-button btn btn-sm btn-default unpublish-button <%= published ? '' : 'hidden' %>' href='#' ><i class="fa fa-star-o" aria-hidden="true"></i> Return</button>          
    <% }%>

    <% if( showReturnButton ) { %>
      <button class='toolbar-button btn btn-sm btn-default return-button <%= submitted ? '' : 'hidden' %>' href='#' ><i class="fa fa-send-o" aria-hidden="true"></i> Return to Sender</button>         
    <% } %>

    <% if( showActionMenu ) { %> 
      <div class="dropdown inline">
        <button id="action-dropdown" class="btn btn-sm btn-default dropdown-toggle" type="button" data-toggle="dropdown">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </button>
        <ul class="dropdown-menu open-right">
          <% if( showSubmitButton ) { %>
            <li><a class='submit-button <%= submitted ? 'hidden' : '' %>' href="#"><i class="fa fa-send" aria-hidden="true"></i> Submit</a></li>
          <% } %>
          <li><a class='share-button <%= shared ? 'hidden' : '' %>' href="#"><i class="fa fa-share-square" aria-hidden="true"></i> Share</a></li>
          <li><a class='stop-sharing-button <%= shared ? '' : 'hidden' %>' href="#"><i class="fa fa-share-square-o" aria-hidden="true"></i> Stop Sharing</a></li>
          <li><a class='rename-button' href="#"><i class="fa fa-pencil-square" aria-hidden="true"></i> Rename</a></li>
          <li><a class='delete-button' href="#"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a></li>
        </ul>
      </div>
    <% } %>
    
  </div>
  
</div>

<div id='sequence-grid'></div>


