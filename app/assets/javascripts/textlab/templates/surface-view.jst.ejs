<div class='viewer-toolbar'>
  <a class='btn btn-default' href='#' id='download-facsimile-button'>
    <span class="fa fa-download" aria-hidden="true"></span>
  </a>

  <div class="btn-group" role="group">
    <a class='btn btn-default' href='#' id='add-mode-button' >
      <span class="glyphicon glyphicon-pencil"  aria-hidden="true"></span>    
    </a>
    <a class='btn btn-default' href='#' id='nav-mode-button' >
      <span class="glyphicon glyphicon-move" aria-hidden="true"></span>    
    </a>
  </div>  
  <a class='btn btn-default' href='#' id='toggle-zones-button'>
    <span id='viz-icon' class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>    
  </a>
  
  <div class="btn-group" role="group">
    <a class='btn btn-default' id='zoom-in-button' href='#'>
      <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
    </a>
    <a class='btn btn-default' id='zoom-out-button' href='#'>
      <span class="glyphicon glyphicon-zoom-out" aria-hidden="true"></span>
    </a>
  </div>
  
  <% if( canEditLeafInfo ) { %> 
    <a class='btn btn-default' id='edit-info-button' href='#'>
      <span class="fa fa-file-o" aria-hidden="true"></span>
    </a>
  <% } %>

</div>
<div id='openseadragon'></div>